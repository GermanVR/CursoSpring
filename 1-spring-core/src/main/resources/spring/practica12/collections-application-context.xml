<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Define bean clase AddressBook -->
	<bean class="org.certificatic.spring.core.practica12.collections.bean.AddressBook">
		<property name="addresses">
			<list>
				<ref bean="ivanDireccionBean" />
				<ref bean="ivanDireccionBean" />
				<ref bean="ivanDireccionBean" />
				<ref bean="lauraDireccionBean" />
				<ref bean="lauraDireccionBean" />
				<ref bean="lauraDireccionBean" />
				<ref bean="pedroDireccionBean" />
				<ref bean="pedroDireccionBean" />
				<ref bean="pedroDireccionBean" />
				<bean class="org.certificatic.spring.core.practica12.collections.bean.Address">
					<constructor-arg name="street" value="San Geronimo" type="java.lang.String" />
					<constructor-arg name="externalNumber" value="21" type="int" />
					<constructor-arg name="internalNumber" value="14" type="java.lang.Integer" />
					<property name="neighbor" value="Ecatepec"></property>
				</bean>
			</list>
		</property>
		<property name="phones">
			<set>
				<ref bean="telefonoHermanaMayor" />
				<ref bean="telefonoHermanaMayor" />
				<ref bean="telefonoHermanaMayor" />
				<ref bean="telefonoMama" />
				<ref bean="telefonoMama" />
				<ref bean="telefonoMama" />
				<ref bean="telefonoPapa" />
				<ref bean="telefonoPapa" />
				<ref bean="telefonoPapa" />
				<ref bean="telefonoHermanoMenor" />
				<ref bean="telefonoHermanoMenor" />
				<ref bean="telefonoHermanoMenor" />
			</set>
		</property>		
		<property name="emergencyNumbers">
			<map>
				<entry key="1" value="Bomberos: 060"></entry>
				<entry key="1" value="Bomberos: 070"></entry>
				<entry key="2" value="Policia: 040"></entry>
				<entry key="3">
					<value>PRoteccion Civil: 020</value>
				</entry>
				<entry key-ref="numero4">
					<bean class="java.lang.String">
						<constructor-arg>
							<value>Suegros: xxx</value>
						</constructor-arg>
					</bean>
				</entry>
			</map>
		</property>
		<property name="family">
			<props>
				<prop key="papa">Francisco Gomez</prop>
				<prop key="mama">Ilse Hernandez</prop>
				<prop key="ex">La Vecina</prop>
			</props>
		</property>
		<property name="numbers">
			<array>
				<value>1</value>
				<value>2</value>
				<value>3</value>
				<ref bean="numero4" />
			</array>
		</property>
		<property name="notes" value="Hola,Mundo,Cruel,!!,Adios">
		</property>
		<property name="persons">
			<set>
				<bean class="org.certificatic.spring.core.practica12.collections.bean.Person">
					<property name="name" value="Angelica"></property>
					<property name="age" value="23"></property>
				</bean>
				<bean class="org.certificatic.spring.core.practica12.collections.bean.Person">
					<property name="name" value="Angelica"></property>
					<property name="age" value="23"></property>
				</bean>
				<bean class="org.certificatic.spring.core.practica12.collections.bean.Person">
					<property name="name" value="Angelica"></property>
					<property name="age" value="23"></property>
				</bean>
				<bean class="org.certificatic.spring.core.practica12.collections.bean.Person">
					<property name="name" value="Angelica"></property>
					<property name="age" value="23"></property>
				</bean>
				<bean class="org.certificatic.spring.core.practica12.collections.bean.Person">
					<property name="name" value="Angelica"></property>
					<property name="age" value="23"></property>
				</bean>
				<bean class="org.certificatic.spring.core.practica12.collections.bean.Person">
					<property name="name" value="Angelica"></property>
					<property name="age" value="23"></property>
				</bean>
			</set>
		</property>
	</bean>


	<bean name="telefonoPapa" class="org.certificatic.spring.core.practica12.collections.bean.Phone">
		<property name="number" value="1111-2222"></property>
	</bean>

	<bean name="telefonoMama" class="org.certificatic.spring.core.practica12.collections.bean.Phone">
		<property name="number" value="3333-4444"></property>
	</bean>

	<bean name="telefonoHermanaMayor" class="org.certificatic.spring.core.practica12.collections.bean.Phone">
		<property name="number" value="5555-6666"></property>
	</bean>

	<bean name="telefonoHermanoMenor" class="org.certificatic.spring.core.practica12.collections.bean.Phone">
		<property name="number" value="7777-8888"></property>
	</bean>

	<bean id="ivanDireccionBean" class="org.certificatic.spring.core.practica12.collections.bean.Address">
		<constructor-arg index="0" value="Xicotencatl" type="java.lang.String" />
		<constructor-arg index="1" value="122" type="int" />
		<constructor-arg index="2" value="7" type="java.lang.Integer" />
		<property name="neighbor" value="Del Valle" />
	</bean>

	<bean id="lauraDireccionBean" class="org.certificatic.spring.core.practica12.collections.bean.Address">
		<constructor-arg name="street" value="Av. Popocatepetl" type="java.lang.String" />
		<constructor-arg name="externalNumber" value="1504" type="int" />
		<constructor-arg name="internalNumber" value="1" type="java.lang.Integer" />
		<property name="neighbor" value="Chapultepec Morales"></property>
	</bean>

	<bean id="pedroDireccionBean" class="org.certificatic.spring.core.practica12.collections.bean.Address">
		<constructor-arg name="street" value="Hegel" type="java.lang.String" />
		<constructor-arg name="externalNumber" value="2" type="int" />
		<constructor-arg name="internalNumber" value="10" type="java.lang.Integer" />
		<property name="neighbor" value="Pencil"></property>
	</bean>

	<bean id="numero4" class="java.lang.Integer">
		<constructor-arg value="4" />
	</bean>

</beans>
