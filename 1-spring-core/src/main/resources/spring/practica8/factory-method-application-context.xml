<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Define bean student1 -->
	<bean id="student1" class="org.certificatic.spring.core.practica8.factorymethod.bean.Student" factory-method="constructStudent">
		<constructor-arg index="0" value="Javier Gomez"></constructor-arg>
		<constructor-arg index="1" value="Programacion"></constructor-arg>
	</bean>
	<!-- Define bean student2 -->
	<bean id="student2" class="org.certificatic.spring.core.practica8.factorymethod.bean.Student" factory-bean="studentFactoryBean" factory-method="buildStudent">
		<constructor-arg index="0" value="Alejandro Fernandez"></constructor-arg>
		<constructor-arg index="1" value="Algoritmos"></constructor-arg>
	</bean>
	<bean id="studentFactoryBean" class="org.certificatic.spring.core.practica8.factorymethod.factories.StudentFactory"></bean>
</beans>
