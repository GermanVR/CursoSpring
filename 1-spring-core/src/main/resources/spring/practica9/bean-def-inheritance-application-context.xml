<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="connectionBeanTemplate"
		class="org.certificatic.spring.core.practica9.beandefinitioninheritance.bean.ConnectionDataBase"
		scope="singleton" init-method="connect" destroy-method="disconnect" abstract="true">
		<property name="user" value="userw"></property>
		<property name="password" value="passw"></property>
		<property name="debugMode" value="false"></property>
	</bean>



	<!-- Define bean connectionProdBean -->
	<bean id="connectionProdBean" parent="connectionBeanTemplate"
		class="org.certificatic.spring.core.practica9.beandefinitioninheritance.bean.ConnectionDataBase"
		scope="singleton" init-method="connect" destroy-method="disconnect">
		<property name="database" value="Produccion"></property>
		<property name="password" value="asfd"></property>
		<property name="user" value="asd"></property>
	</bean>
	<!-- Define bean connectionTestBean -->
	<bean id="connectionTestBean" parent="connectionBeanTemplate"
		class="org.certificatic.spring.core.practica9.beandefinitioninheritance.bean.ConnectionDataBase">
		<property name="database" value="Desarrllo"></property>
		<property name="debugMode" value="true"></property>
	</bean>
</beans>
